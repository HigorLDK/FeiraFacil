<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textProduto"
        style="@style/MyTextViewStyle"
        android:layout_width="120dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/andada_pro"
        android:paddingStart="4dp"
        android:text="Detergente de Prato"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textQuantidade"
        style="@style/MyTextViewStyle"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/andada_pro"
        android:text="100"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/textProduto"
        app:layout_constraintStart_toEndOf="@+id/textProduto"
        app:layout_constraintTop_toTopOf="@+id/textProduto" />

    <TextView
        android:id="@+id/textValor"
        style="@style/MyTextViewStyle"
        android:layout_width="83dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/andada_pro"
        android:paddingStart="4dp"
        android:text="R$ 1008.00"
        android:textAlignment="textStart"
        android:textSize="16dp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/textQuantidade"
        app:layout_constraintStart_toEndOf="@+id/textQuantidade"
        app:layout_constraintTop_toTopOf="@+id/textQuantidade" />

    <ImageButton
        style="@style/MyButtonEditStyle"
        android:id="@+id/btnEditar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/layered_blue"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/textValor"
        app:layout_constraintStart_toEndOf="@+id/textValor"
        app:layout_constraintTop_toTopOf="@+id/textValor"
        />

    <ImageButton
        style="@style/MyButtonDeleteStyle"
        android:id="@+id/btnExcluir"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/layered_red"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnEditar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnEditar"
        app:layout_constraintTop_toTopOf="@+id/btnEditar"
        />

</androidx.constraintlayout.widget.ConstraintLayout>