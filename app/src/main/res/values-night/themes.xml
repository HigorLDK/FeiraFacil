<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FeiraFacil" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primaria_variação_noite</item>
        <item name="colorPrimaryVariant">@color/primaria_variação_noite</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:titleTextColor">@color/black</item>

        <item name="android:windowBackground">@color/black</item>

        <item name="cardViewStyle">@style/MyCardViewStyle</item>



    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="strokeColor">@color/cinza_night</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/cardViewColorNight</item> <!-- Cor do CardView para tema escuro -->
    </style>

    <style name="MyTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/btn_zerar</item> <!-- Cor do TextView para tema escuro -->
    </style>

    <style name="MyButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="MyActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/white</item>
    </style>

    <style name="MyButtonDeleteStyle" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="srcCompat">@drawable/ic_excluir</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/cardViewColorNight</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/primaria</item> <!-- Cor do texto -->
    </style>


    <style name="Theme.FeiraFacil" parent="Base.Theme.FeiraFacil" />

</resources>